. config/options $1

cd $ROOT/$BUILD/${PKG_NAME}-${PKG_VERSION}

case $TARGET_ARCH in
	i386)
	;;
	x86_64)
	;;
	arm)
		../qt5-5.1.0/qtbase/bin/qmake && make INSTALL_ROOT=$SYSROOT_PREFIX install
		cd examples
		../../qt5-5.1.0/qtbase/bin/qmake && make INSTALL_ROOT=$SYSROOT_PREFIX install
	;;
esac
